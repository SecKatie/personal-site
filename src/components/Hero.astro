---
interface Props {
    name: string;
    tagline: string;
    avatarSrc?: string;
    avatarAlt?: string;
}

const { name, tagline, avatarSrc = "/avatar.png", avatarAlt = "Avatar" } = Astro.props;
---

<div class="hero">
    <div class="avatar-container">
        <img src={avatarSrc} alt={avatarAlt} class="avatar" />
    </div>
    <div class="hero-text">
        <h1>{name}</h1>
        <p class="tagline">{tagline}</p>
    </div>
</div>
